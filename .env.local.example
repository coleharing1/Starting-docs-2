# ============================================
# Environment Variables Template
# ============================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!

# ============================================
# Application
# ============================================
NEXT_PUBLIC_APP_NAME="My App"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_DESCRIPTION="Your app description"

# ============================================
# Development Database (SQLite) - Phase 0-4
# ============================================
DATABASE_URL="file:./prisma/dev.db"

# ============================================
# Authentication (Development) - Phase 0-4
# ============================================
# Generate a secret: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-development-secret-change-in-production"

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# ============================================
# Production Database (Supabase) - Phase 5
# ============================================
# Get these from: https://app.supabase.io/project/_/settings/api
# NEXT_PUBLIC_SUPABASE_URL="https://[PROJECT_ID].supabase.co"
# NEXT_PUBLIC_SUPABASE_ANON_KEY="[ANON_KEY]"
# SUPABASE_SERVICE_ROLE_KEY="[SERVICE_ROLE_KEY]"
# SUPABASE_JWT_SECRET="[JWT_SECRET]"

# Direct database connection (for Prisma)
# DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_ID].supabase.co:5432/postgres"
# DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_ID].supabase.co:5432/postgres"

# ============================================
# Email Service (Optional)
# ============================================
# Resend
# RESEND_API_KEY=""
# RESEND_FROM_EMAIL="noreply@yourdomain.com"

# SendGrid
# SENDGRID_API_KEY=""
# SENDGRID_FROM_EMAIL="noreply@yourdomain.com"

# ============================================
# File Storage (Optional)
# ============================================
# AWS S3
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET=""

# Cloudinary
# NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=""
# CLOUDINARY_API_KEY=""
# CLOUDINARY_API_SECRET=""

# ============================================
# Payment Processing (Optional)
# ============================================
# Stripe
# STRIPE_PUBLISHABLE_KEY=""
# STRIPE_SECRET_KEY=""
# STRIPE_WEBHOOK_SECRET=""

# ============================================
# Analytics & Monitoring (Optional)
# ============================================
# Vercel Analytics
# NEXT_PUBLIC_ANALYTICS_ID=""

# PostHog
# NEXT_PUBLIC_POSTHOG_KEY=""
# NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Sentry
# NEXT_PUBLIC_SENTRY_DSN=""
# SENTRY_AUTH_TOKEN=""
# SENTRY_ORG=""
# SENTRY_PROJECT=""

# ============================================
# AI Services (Optional)
# ============================================
# OpenAI
# OPENAI_API_KEY=""
# OPENAI_ORG_ID=""

# Anthropic Claude
# ANTHROPIC_API_KEY=""

# Google Gemini
# GOOGLE_AI_API_KEY=""

# ============================================
# External APIs (Optional)
# ============================================
# Add your external API keys here
# EXTERNAL_API_KEY=""
# EXTERNAL_API_SECRET=""
# EXTERNAL_API_URL=""

# ============================================
# Feature Flags (Optional)
# ============================================
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_PWA="false"
NEXT_PUBLIC_MAINTENANCE_MODE="false"

# ============================================
# Development Tools
# ============================================
# Enable debug mode
DEBUG="false"
NODE_ENV="development"

# Prisma
# LOG_LEVEL="info"
# PRISMA_LOG_LEVEL="info"

# ============================================
# Rate Limiting (Optional)
# ============================================
# RATE_LIMIT_ENABLED="true"
# RATE_LIMIT_WINDOW_MS="60000"
# RATE_LIMIT_MAX_REQUESTS="100"

# ============================================
# Security
# ============================================
# Content Security Policy
# CSP_REPORT_URI=""

# CORS allowed origins (comma-separated)
# CORS_ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# ============================================
# Deployment
# ============================================
# Vercel
# VERCEL_URL=""
# VERCEL_ENV=""
# VERCEL_GIT_COMMIT_SHA=""

# ============================================
# Notes
# ============================================
# 1. Never commit .env.local to git
# 2. Keep production secrets in your deployment platform
# 3. Use different values for development and production
# 4. Rotate secrets regularly
# 5. Document any new environment variables here