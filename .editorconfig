# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 2
quote_type = single

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Package files
[package.json]
indent_size = 2

# Configuration files
[.*rc]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# CSS and related files
[*.{css,scss,sass,less}]
indent_size = 2

# Python files (if any)
[*.py]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Batch files
[*.{bat,cmd}]
end_of_line = crlf

# Git files
[.gitattributes]
end_of_line = lf

[.gitignore]
end_of_line = lf